run = "pip install -q flask yt-dlp && python app.py"
language = "python3"
entrypoint = "app.py"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "pip install flask yt-dlp && python app.py"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 5000
externalPort = 80

[packager]
language = "python3"

[packager.features]
enabledForHosting = true
packageSearch = true
guessImports = true
